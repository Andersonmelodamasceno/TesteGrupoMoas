@model CadastroDeProdutos.Models.Produto

<h2>Adicionar Produto</h2>

<form asp-action="Create" method="post">
    <label>Nome:</label>
    <input asp-for="Nome" class="form-control" required />

    <label>Categoria:</label>
    <input asp-for="Categoria" class="form-control" required />

    <label>Descrição:</label>
    <textarea asp-for="Descricao" class="form-control"></textarea>

    <label>Imagem (URL):</label>
    <input asp-for="Imagem" class="form-control" />

    <label>Preço:</label>
    <input asp-for="Preco" class="form-control" required type="number" step="0.01" />

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
